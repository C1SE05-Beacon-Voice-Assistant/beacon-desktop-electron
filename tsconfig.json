{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "lib": ["es2015", "es2017", "dom"]
  },
  "include": ["src", "electron/main.ts"]
}
